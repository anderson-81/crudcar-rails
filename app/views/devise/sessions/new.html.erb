<div class="container">
   <div class="row">
      <div class="col-md-offset-4 col-md-4 col-md-offset-4">
         <div class="form-group">
            <br>
         </div>
         <div class="form-group">
            <h2>Login</h2>
         </div>
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
               <%= f.label :email %>
               <%= f.email_field :email, :class => 'form-control', autofocus: true, :value => "" %>
            </div>
            <div class="form-group">
               <%= f.label :password %>
               <%= f.password_field :password, :class => 'form-control', autocomplete: "off", :value => "" %>
            </div>
            <% if devise_mapping.rememberable? -%>
            <div class="form-group">
               <%= f.label :remember_me, :class => "pull-right padding-left-10" %>
               <%= f.check_box :remember_me, :class => "pull-right" %>
            </div>
            <% end -%>
            <div class="form-group">
               <br>
            </div>
            <div class="form-group">
               <%= f.submit "Login", :class => "btn btn-success pull-right col-md-4" %>
            </div>
         <% end %>
       </div>
   </div>
</div>