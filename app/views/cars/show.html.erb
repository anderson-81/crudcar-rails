<%- model_class = Car -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>


<%= image_tag @car.avatar.url, :class => "img-responsive img-rounded" %>

<h5>Car's Data:</h5>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @car.model %></dd>
  <dt><strong><%= model_class.human_attribute_name(:plate) %>:</strong></dt>
  <dd><%= @car.plate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @car.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketval) %>:</strong></dt>
  <dd><%= @car.marketval %></dd>
</dl>

<h5>Contact:</h5>

<dl class="dl-horizontal">
  <dt><strong><%= t("Name") %>:</strong></dt>
  <dd><%= @customer.name %></dd>
  <dt><strong><%= t("Email") %>:</strong></dt>
  <dd><%= @customer.email %></dd>

</dl>


