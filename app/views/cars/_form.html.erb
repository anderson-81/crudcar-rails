<%= form_for @car, :class => "form-horizontal car", :html => { multipart: true } do |f| %>


<style>

</style>

  <% if @car.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @car.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <h4>Customer's Data:</h4>
  
  <div class="form-group col-lg-12">
    <%= f.label "Id" %>
    <%= f.text_field :Customer_id, :class => 'form-control customer_data', :value => @customer.id, :readonly => true %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label "Name" %>
    <%= f.text_field :name, :class => 'form-control customer_data', :value => @customer.name, :readonly => true %>
  </div>
  
  <div class="form-group col-lg-12">
    <hr>
  </div>

  <h4>Car's Data:</h4>
 
  <div class="form-group col-lg-12">
    <%= f.label :model %>
    <%= f.text_field :model,  :maxlength => 100,  :class => 'form-control' %>
    <%= f.error_span(:model) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :plate %>
    <%= f.text_field :plate, :maxlength => 7, :class => 'form-control' %>
    <%= f.error_span(:plate) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :year %>
    <%= f.text_field :year, :maxlength => 4, :class => 'form-control' %>
    <%= f.error_span(:year) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :marketval %>
    <%= f.text_field :marketval,  :maxlength => 15, :class => 'form-control' %>
    <%= f.error_span(:marketval) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to "Cancel", :back, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<script>
  $(function() {
    $('#car_marketval').maskMoney();
  })
</script>


