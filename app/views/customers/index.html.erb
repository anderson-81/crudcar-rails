<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<hr>
  <h4>Filter By Name:</h4>
  <div class="container">
    <div class="row">
      <%= form_tag(customers_path, :method => :get) do %>
        <div class="col-xs-3">
          <%= text_field_tag 'search', '', size: 20, :class => 'form-control' %>
        </div>
        <div class="col-xs-6">
          <%= submit_tag "Search", :class => 'btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:birthday) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= l(customer.birthday) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_customer_path(customer), :class => 'btn btn-default btn-xs' %>
          
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      customer_path(customer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %> 

          <%= link_to t("Select"), customer_path(customer), :class => 'btn btn-xs btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="col-xs-3">
  <%= will_paginate @customers %>
  <div class="row"></div>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_customer_path,
            :class => 'btn btn-primary' %>
</div>





