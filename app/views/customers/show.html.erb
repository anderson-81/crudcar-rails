<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<style>
  
  img{
    width:150px;
    height:150px;
  }

</style>

<div class="form-group col-lg-12">
<div class="row"><%= image_tag @customer.avatar.url, :class => "img-responsive img-rounded" %></div>
   
</div>

<div class="form-group col-lg-12">
  <div class="row">
    <strong><%= model_class.human_attribute_name(:name) %>:</strong>
  <%= @customer.name %>
  
  </div>
  <div class="row">
     <strong><%= model_class.human_attribute_name(:email) %>:</strong>
  <%= @customer.email %>
 

  </div>
  <div class="row">
      <strong><%= model_class.human_attribute_name(:salary) %>:</strong>
  <%= @customer.salary %>


  </div>
  <div class="row">
    <strong><%= model_class.human_attribute_name(:birthday) %>:</strong>
  <%= l(@customer.birthday) %>
  
  </div>
  <div class="row">
    <strong><%= model_class.human_attribute_name(:gender) %>:</strong>
  <%= t(@customer.getGender) %>
  </div> 
</div>


<div class="form-group col-lg-12">
  <dl class="dl-horizontal">
  
</div>



<%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<hr>
<h4>Customer's Cars</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(model_class.human_attribute_name(:model)) %></th>
      <th><%= t(model_class.human_attribute_name(:year)) %></th>
      <th><%= t(model_class.human_attribute_name(:marketval)) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.marketval %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      "/customers/#{car.Customer_id}/cars/#{car.id}", :class => 'btn btn-default btn-xs' %>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      "/customers/#{car.Customer_id}/cars/#{car.id}",
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>

          <%= link_to t("Image", :default => t("helpers.links.show")), "/customers/#{car.Customer_id}/cars/#{car.id}/show", :class => 'btn btn-xs btn-primary' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-xs-3">
  <%= will_paginate @cars %>
  <div class="row"></div>
  <%= link_to t('.new', :default => t("helpers.links.new")), "/customers/#{@customer.id}/cars/new", :class => 'btn btn-primary' %>
</div>





