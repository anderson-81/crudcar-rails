<%= form_for @customer, :class => "form-horizontal customer", :html => { multipart: true } do |f| %>

  <% if @customer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @customer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group col-lg-12">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
    <%= f.error_span(:name) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :email %>
    <%= f.text_field :email, :class => 'form-control' %>
    <%= f.error_span(:email) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :salary %>
    <%= f.text_field :salary, :class => 'form-control' %>
    <%= f.error_span(:salary) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :birthday %>
    <%= f.date_field :birthday, :class => 'form-control' %>
    <%= f.error_span(:birthday) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :gender %>
    <%= f.select :gender, options_for_select([[t('Male'), 'M'],[t('Female'), 'F']]), {}, {:class => 'form-control'} %>
    <%= f.error_span(:gender) %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Cadastrar", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<script>
  $(function() {
    $('#customer_salary').maskMoney();
  })
</script>



